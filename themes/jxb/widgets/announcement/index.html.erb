<div <%= data_widget %> >
  <div class="x box">
    <div class="box-header data-widget-title"><h4><%= title t('#cells.announcement.title', 'Announcement') %></h4></div>
    <table class="table table-hover">
      <% @announcements.each do |announcement| %>
      <tr>
        <td class="thread"><a href=<%= "/courses/#{announcement.context.id}/discussion_topics/#{announcement.id}" %>><%= announcement.title %></a><span class="stat"><%= announcement.user.name %></span></td>
        <td class="last_post"><%= announcement.context.name %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
