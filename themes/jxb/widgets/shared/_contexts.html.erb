<table class="table table-hover">
  <% objects.each do |obj| %>
  <% obj_context = obj.context %>
  <% style = @ids.include?(obj_context.id) ? '' : "style='display:none;'" if @opts[:can_select_course] %>
  <tr data-course-id=<%= obj_context.id %> <%= style if @opts[:can_select_course] %> >
    <td class="thread"><a href=<%= "/courses/#{obj_context.id}/discussion_topics/#{obj.id}" %>><%= obj.title %></a><span class="stat"><%= obj.user.name %></span></td>
    <td class="last_post"><%= obj_context.name %></td>
  </tr>
  <% end %>
</table>
