<div <%= data_widget %> >
  <div class="x box">
    <%= render :partial => "shared/box_header", :locals => { :header_title => t('#cells.discussion.title', 'Discussion') } %>
    <table class="table table-hover">
      <% @discussions.each do |discussion| %>
      <% style = @ids.include?(discussion.context.id) ? '' : "style='display:none;'" if @opts[:can_select_course] %>
      <tr data-course-id=<%= discussion.context.id%> <%= style if @opts[:can_select_course] %> >
        <td class="thread"><a href=<%= "/courses/#{discussion.context.id}/discussion_topics/#{discussion.id}" %>><%= discussion.title %></a><span class="stat"><%= discussion.user.name %></span></td>
        <td class="last_post"><%= discussion.context.name %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
