<% define_content :link do %>
  <%= HostUrl.protocol %>://<%= HostUrl.default_host %>/register/<%= asset.confirmation_code %>
<% end %>

<% define_content :subject do %>
  <%= t('subject', 'New Jiaoxuebang Account') %>
<% end %>
<% url = (HostUrl.context_host((asset.pseudonym || asset.user.pseudonym).account) rescue nil) || HostUrl.default_host %>
<%= t :body, <<-BODY, :url => url
An account has been created for you at %{url}, but you already have a Jiaoxuebang account.  If you would like to merge them together, please visit the following url:
BODY
%>
<%= content :link %>
