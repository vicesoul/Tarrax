<% question_bank_id ||= "" %>
<% max_combinations = 200 %>
<% js_block do %>
  <script>
  var maxCombinations = <%= raw max_combinations %>;
  </script>
<% end %>

<form id="question_form_template" class="question_form" style="display: none;">
<div class="question">
  <div class="header" style="background-color: transparent;">
    <input type="text" style="width: 150px;" name="question_name"/>
    <select class="question_type" name="question_type">
      <option value="multiple_choice_question" style="padding: 2px;"><%= t('question_type.multiple_choice', "Multiple Choice") %></option>
      <option value="true_false_question" style="padding: 2px;"><%= t('question_type.true_false', "True/False") %></option>
      <option value="short_answer_question" style="padding: 2px;"><%= t('question_type.short_answer', "Fill In the Blank") %></option>
      <option value="fill_in_multiple_blanks_question" style="padding: 2px;"><%= t('question_type.fill_in_multiple_blanks', "Fill In Multiple Blanks") %></option>
      <option value="multiple_answers_question" style="padding: 2px;"><%= t('question_type.multiple_answers', "Multiple Answers") %></option>
      <option value="multiple_dropdowns_question" style="padding: 2px;"><%= t('question_type.multiple_dropdowns', "Multiple Dropdowns") %></option>
      <option value="matching_question" style="padding: 2px;"><%= t('question_type.matching', "Matching") %></option>
      <option value="numerical_question" style="padding: 2px;"><%= t('question_type.numerical', "Numerical Answer") %></option>
      <option value="calculated_question" style="padding: 2px;"><%= t('question_type.calculated', "Formula Question") %></option>
      <option value="missing_word_question" style="padding: 2px;" class="missing_word"><%= t('question_type.missing_word', "Missing Word") %></option>
      <option value="essay_question" style="padding: 2px;"><%= t('question_type.essay', "Essay Question") %></option>
      <option value="text_only_question" style="padding: 2px;"><%= t('question_type.text_only', "Text (no question)") %></option>
    </select>
    <span class="question_points_holder">
      <span style="padding-left: 20px;"><%= before_label :points, 'pts' %></span>
      <input class="float_value" type="text" style="width: 25px;" name="question_points"/>
    </span>
  </div>
  <div class="links">
  </div>
  <div class="clear"></div>
  <div class="text">
    <div class="multiple_choice_question_explanation explanation subheader">
      <%= t('explanations.multiple_choice', "Enter your question and multiple answers, then select the one correct answer.") %>
    </div>
    <div class="true_false_question_explanation explanation subheader">
      <%= t('explanations.true_false', "Enter your question text, then select if True or False is the correct answer.") %>
    </div>
    <div class="short_answer_question_explanation explanation subheader">
      <%= mt('explanations.short_answer', "Enter your question text, then define all possible correct answers for the blank.  \nStudents will see the question followed by a small text box to type their answer.") %>
    </div>
    <div class="fill_in_multiple_blanks_question_explanation explanation subheader">
      <%= t('explanations.fill_in_multiple_blanks', "Enter your question, specifying where each blank should go.  Then define the possible correct answer for each blank.  Students must type correct answers into text boxes at each blank.") %>
    </div>
    <div class="multiple_answers_question_explanation explanation subheader">
      <%= t('explanations.multiple_answers', "This question will show a checkbox next to each answer, and the student must select ALL the answers you mark as correct.") %>
    </div>
    <div class="multiple_dropdowns_question_explanation explanation subheader">
      <%= t('explanations.multiple_dropdowns', "Enter your question, specifying where each dropdown should go.  Then define possible answers for each dropdown, with one correct answer per dropdown.") %>
    </div>
    <div class="matching_question_explanation explanation subheader">
      <%= t('explanations.matching', "Build pairs of matching values.  Students will see values on the left and have to select the matching value on the right from a dropdown.  Multiple rows can have the same answer, and you can add additional distractors to the right side.") %>
    </div>
    <div class="numerical_question_explanation explanation subheader">
      <%= t('explanations.numerical', "Define the correct answer as any number within a range, or a number plus or minus some error margin.  Student will be given an empty text box to type their numerical answer.") %>
    </div>
    <div class="calculated_question_explanation explanation subheader">
      <%= t('explanations.calculated', "Enter your question, build a formula, and generate a set of possible answer combinations.  Students will see the question with a randomly selected set of variables filled in and have to type the correct numerical answer.") %>
    </div>
    <div class="missing_word_question_explanation explanation subheader">
      <%= t('explanations.missing_word', "Define text to go before and after the dropdown.  Build a set of possible answers and select one correct answer.") %>
    </div>
    <div class="essay_question_explanation explanation subheader">
      <%= t('explanations.essay', "Students will be given a text field to compose their answer.") %>
    </div>
    <div class="text_only_question_explanation explanation subheader">
      <%= t('explanations.text_only', 'This "question" will not be scored, but can be useful for introducing a set of related questions.') %>
    </div>
    <b class="question_header"><%= before_label(:question, "Question") %></b>
    <div class="equation_header">
      <div class="equation_subheader">
        <%= t('explanations.equations', "You can define variables by typing variable names surrounded by brackets") %><br/>
        (<%= t(:equation_example, 'i.e. "What is 5 plus [x]?"') %>)
        <a href="#" class="help_with_equations_link"><%= t('links.need_help', "Need help?") %></a>
      </div>
    </div>
    <div class="multi_answer_sets multi_answer_sets_subheader">
      <%= t('explanations.multi_answer_sets', "In the box below, every place you want to show an answer box, type a reference word (no spaces) surrounded by brackets") %><br/>
      (<%= t(:multi_answer_sets_example, 'i.e. "Roses are [color1], violets are [color2]"') %>)
    </div>
    <div style="float: right; margin-right: 10%; font-size: 0.8em;">
      <a href="#" class="toggle_question_content_views_link"><%= t('links.switch_views', "Switch Views") %></a>
    </div>
    <div class="clear"></div>
    <div style="text-align: center;">
      <textarea style="width: 90%; height: 120px;" class="question_content" name="question_text"></textarea>
    </div>
    <b class="answers_header"><%= before_label(:answers, "Answers") %></b>
    <div style="display: none;">
    <select class="answer_selection_type" name="answer_selection_type">
      <option value="single_answer"><%= t('options.only_one_correct', "Only One Correct Answer") %></option>
      <option value="multiple_answer"><%= t('options.students_select_multiple', "Students Select Multiple Answers") %></option>
    </select>
    </div>
    <div class="multi_answer_sets">
      <%= t(:show_possible_answers, "Show Possible Answers for %{question}", :question => raw('<select class="blank_id_select"></select>')) %>
    </div>
    <div class="equation_answers">
      <div class="clear"></div>
      <div class="equation_header variables_specified">
        <%= t('headers.variable_definitions', "Variable Definitions") %>
        <div class="equation_subheader">
          <%= t('explanations.variable_definitions', "Once you have entered your variables above, you should see them listed here.  You can specify the range of possible values for each variable below.") %>
        </div>
      </div>
      <div class="equation_content variables_specified">
        <table class="variables">
          <thead>
            <tr>
              <th><%= t('headers.variable_name', "Variable") %></th>
              <th><%= t('headers.variable_minimum', "Min") %></th>
              <th><%= t('headers.variable_maximum', "Max") %></th>
              <th><%= t('headers.variable_precision', "Decimal Places") %></th>
              <th>
                <%= t('headers.variable_example_value', "Example Value") %>
                <div><button type="button" class="recompute_variables"><%= t('buttons.recompute', "Recompute") %></button></div>
              </th>
            </tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
      <div class="equation_header variables_specified">
        <%= t('headers.formula_definition', "Formula Definition") %>
        <div class="equation_subheader">
          <%= t('explanations.formula_definition', "Next you'll need to write the formula or formula's used to compute the correct answer.  Just use the same variable names listed above.") %>
        </div>
      </div>
      <div class="equation_content variables_specified">
        <input type="text" class="supercalc" style="width: 300px;"/>
      </div>
      <div class="equation_header variables_specified formulas_specified">
        <%= t('headers.generate_possible_solutions', "Generate Possible Solutions") %>
        <div class="equation_subheader">
          <%= t('explanation.generate_possible_solutions', "Finally, build as many variable-solution combinations as you need for your quiz.") %>
        </div>
      </div>
      <div class="equation_content variables_specified formulas_specified">
        <%= t(:offer_combinations, "Offer %{how_many} possible value combinations (max %{max_combinations})", :how_many => raw('<input type="text" class="combination_count combinations_option" style="width: 30px;"/>'), :max_combinations => max_combinations) %><br/>
        <%= t(:allow_tolerance, "allow an error margin of +/- %{tolerance}", :tolerance => raw('<input type="text" class="combination_answer_tolerance float_value" style="width: 30px;" value="0"/>')) %>
        <button type="button" class="compute_combinations combinations_option"><%= t('buttons.generate', "Generate") %></button>
      </div>
      <div class="formulas_specified combinations_holder">
        <table class="combinations">
          <thead>
            <tr></tr>
          </thead>
          <tbody>
          </tbody>
        </table>
      </div>
    </div>
    <div class="form_answers">
    </div>
    <div style="text-align: right;" class="add_answer">
      <a href="#" class="add_answer_link add"><%= t('links.add_another_answer', "Add Another Answer") %></a>
    </div>
    <div class="matching_answer_incorrect_matches_holder" style="margin-top: 15px;">
      <b><%= before_label(:distractors, "Additional Match Possibilities (distractors)") %></b>
      <div style="font-size: 0.8em;"><%= t(:distractor_instructions, "type each distractor on its own line") %></div>
      <div style="text-align: center;">
      <textarea style="width: 90%; height: 50px;" name="matching_answer_incorrect_matches"></textarea>
      </div>
    </div>
    <div class="missing_word_after_answer" style="margin-top: 15px;">
      <b><%= before_label(:missing_word_after, "Text to go after answers") %></b>
      <div style="float: right; margin-right: 10%; font-size: 0.8em;">
        <a href="#" class="toggle_text_after_answers_link"><%= t('links.switch_views', "Switch Views") %></a>
      </div>
      <div style="text-align: center;">
      <textarea style="width: 90%; height: 70px;" name="text_after_answers" class="text_after_answers"></textarea>
      </div>
    </div>
    <div class="question_comment question_correct_comment">
      <div class="comment_top"></div>
      <a href="#" class="comment_focus" title="<%= t('titles.click_to_enter_correct_answer_comments', "Click to enter comments for a correct answer") %>">...</a>
      <div class="details"><%= t(:correct_answer_comments, "Correct answer comments") %></div>
      <textarea style="width: 90%; height: 75px;" class="comments" name="correct_comments"></textarea>
      <span class="correct_comments_html" style="display:none;"></span>
    </div>
    <div class="question_comment question_incorrect_comment">
      <div class="comment_top"></div>
      <a href="#" class="comment_focus" title="<%= t('titles.click_to_enter_wrong_answer_comments', "Click to enter comments for a wrong answer") %>">...</a>
      <div class="details"><%= t(:wrong_answer_comments, "Wrong answer comments") %></div>
      <textarea style="width: 90%; height: 75px;" class="comments" name="incorrect_comments"></textarea>
      <span class="incorrect_comments_html" style="display:none;"></span>
    </div>
    <div class="question_comment question_neutral_comment">
      <div class="comment_top"></div>
      <a href="#" class="comment_focus" title="<%= t('titles.click_to_enter_general_answer_comments', "Click to enter general comments") %>">...</a>
      <div class="details"><%= t(:general_answer_comments, "General answer comments") %></div>
      <textarea style="width: 90%; height: 75px;" class="comments" name="neutral_comments"></textarea>
      <span class="neutral_comments_html" style="display:none;"></span>
    </div>
    <div class="clear"></div>
    <div class="button-container">
      <button type="button" class="button small-button cancel_link"><%= t('#buttons.cancel', "Cancel") %></button>
      <button type="submit" class="button small-button submit_button btn-primary"><%= t('buttons.create_update_question', "Create/Update Question") %></button>
    </div>
  </div>
</div>
</form>
