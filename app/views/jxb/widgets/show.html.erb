<% content_for :head do %>
<style type="text/css" media="all">
#wrapper #main {
  max-width: none;
  margin-bottom: 0;
}
#wrapper #main #content{
  padding: 0;
}
#wrapper-container{
  margin-top: 0 !important;
}
</style>
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag( Jxb::Theme.css_path('app.css', @page.theme) ) %>
<% end %>

<% content_for :foot do %>
  <%= javascript_include_tag "/themes/#{@page.theme}/javascripts/app" %>
<% end %>

<%= render :partial => 'widgets/show' %>
