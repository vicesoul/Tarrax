<h1>Listing widgets</h1>

<table>
  <tr>
    <th>Cell name</th>
    <th>Cell action</th>
    <th>Title</th>
    <th>Body</th>
    <th>Position</th>
    <th>Seq</th>
    <th>Page</th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%=h widget.cell_name %></td>
    <td><%=h widget.cell_action %></td>
    <td><%=h widget.title %></td>
    <td><%=h widget.body %></td>
    <td><%=h widget.position %></td>
    <td><%=h widget.seq %></td>
    <td><%=h widget.page_id %></td>
    <td><%= link_to 'Show', widget %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
    <td><%= link_to 'Destroy', widget, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New widget', new_widget_path %>