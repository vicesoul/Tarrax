<% theme_name = page.theme || 'jiaoxuebang' %>

<% content_for :head do %>
  <%= stylesheet_link_tag( Jxb::Theme.css_path('app.css', theme_name) ) %>
  <style type="text/css" media="all">
    <% unless page.background_image.blank? %>
      body #<%= theme_name %> [data-bg-varied=true]{ <%= page.background_image %> }
    <% end %>
  </style>
<% end %>

<% content_for :foot do %>
  <%= javascript_include_tag "/themes/#{theme_name}/javascripts/app" %>
<% end %>

