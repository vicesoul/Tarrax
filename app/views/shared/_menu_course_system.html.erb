<li class="customListItem" data-id="<%= menu_course_system[:id] %>">
  <a href="<%= menu_course_system[:href] %>">
    <span class="name ellipsis" title="<%= menu_course_system[:longName] %>"><%= menu_course_system[:shortName] %></span>
    <% if defined? menu_course_system[:term] %>
      <span class="subtitle ellipsis enrollment_term menu-item-drop-float-right"><%= menu_course_system[:term] %></span>
    <% end %>
    <span class="subtitle ellipsis menu-item-drop-float-right"><%= menu_course_system[:root_account] %></span>
    <span class="subtitle ellipsis"><%= menu_course_system[:subtitle] %></span>
  </a>
</li>
