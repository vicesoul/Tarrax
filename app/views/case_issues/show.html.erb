
<p>Subject: <%= @case_issue.subject %></p>
<p>State: <%= @case_issue.workflow_state %></p>
<p>Author <%= @case_issue.user.name %></p>
<p>Updated At <%= @case_issue.updated_at.to_formatted_s(:db) %></p>
<p>
  <span>Template:</span>
  <% @case_issue.case_tpl.case_tpl_widgets.each do |w| %>
    <div style="width:200px;border-bottom:thick dotted #ff0000;">
      <div><%= w.title %></div>
      <div><%= w.body %></div>
    </div>
  <% end %>
</p>
<% if @case_issue.new? && can_do(@context, @current_user, :operate_case_as_student) %>
  <%= link_to 'Edit', edit_course_case_issue_path(@context, @case_issue) %> |
<% end %>
<%= link_to 'Back', course_case_issues_path(@context) %>
