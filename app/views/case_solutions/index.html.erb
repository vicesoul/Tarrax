<h1>Listing case_solutions</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th><%= t '', 'Case Issue' %></th>
      <th><%= t '', 'Title' %></th>
      <th><%= t '', 'State' %></th>
      <th><%= t '', 'Group Discuss' %></th>
      <th><%= t '', 'Author' %></th>
      <th><%= t '', 'Updated At' %></th>
      <th><%= t '', 'Operation' %></th>
    </tr>
  </thead>

<% @case_solutions.each do |case_solution| %>
  <tr>
    <td><%= link_to case_solution.case_issue.subject, course_case_issue_case_solution_path(@context, params[:case_issue_id], case_solution) %></td>
    <td><%= case_solution.title %></td>
    <td><%= case_solution.workflow_state %></td>
    <td><%= case_solution.group_discuss ? 'yes' : 'no' %></td>
    <td><%= case_solution.user.name %></td>
    <td><%= case_solution.updated_at.to_formatted_s(:db) %></td>
    <td>
      <% if case_solution.executing? %>
        <%= link_to (t '', 'Submit'), case_solution_submit_path(case_solution) %> |
        <%= link_to 'Edit', edit_course_case_issue_case_solution_path(@context, params[:case_issue_id], case_solution) %>
      <% end %>
      <% if case_solution.being_reviewed? %>
        <%= link_to (t '', 'Review'), case_solution_review_path(case_solution, :review_result => 'review') %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

