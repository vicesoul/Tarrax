
<% js_bundle :case_solution_index %>
<div>
  <% form_for @search, :url => course_case_issue_case_solutions_path do |f| %>
    <div>
        <ul>
          <li>
            <label><%= t 'selector.title', 'Title' %>:</label>
            <%= f.text_field :title_like %>
          </li>
          <li>
            <label><%= t 'selector.author', 'Author' %>:</label>
            <%= f.text_field :user_name_like %>
          </li>
          <li>
            <label><%= t 'selector.state', 'State' %>:</label>
            <%= f.check_box :workflow_state_in, {:name => "search[workflow_state_in][]"}, 'executing', nil %> <%= t '#case_solutions.state_array.executing', 'Executing' %>
            <%= f.check_box :workflow_state_in, {:name => "search[workflow_state_in][]"}, 'being_reviewed', nil %> <%= t '#case_solutions.state_array.being_reviewed', 'Being reviewed' %>
            <%= f.check_box :workflow_state_in, {:name => "search[workflow_state_in][]"}, 'reviewed', nil %> <%= t '#case_solutions.state_array.reviewed', 'Reviewed' %>
            <%= f.check_box :workflow_state_in, {:name => "search[workflow_state_in][]"}, 'recommended', nil %> <%= t '#case_solutions.state_array.recommended', 'Recommended' %>
          </li>
          <li>
            <label> </label>
            <%= f.submit t('selector.query', 'Query'), {:class => "btn btn-primary"} %>
          </li>
         </ul>
    </div>
  <% end %>
</div>
<% unless @case_solutions.empty? %>
  <%= pagination = will_paginate(@case_issues) %>
  <div>
    <h1>
      <%= @case_solutions[0].case_issue.subject %>
    </h1>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= sortable_for_searchlogic('title', (t 'headings.title', 'Title')) %></th>
        <th><%= sortable_for_searchlogic('workflow_state', (t 'headings.state', 'State')) %></th>
        <th><%= sortable_for_searchlogic('group_discuss', (t 'headings.group_discuss', 'Group Discuss')) %></th>
        <th><%= sortable_for_searchlogic('name', (t 'headings.author', 'Author'), 'user_sort_by_custom') %></th>
        <th><%= sortable_for_searchlogic('updated_at', (t 'headings.updated_at', 'Updated At')) %></th>
        <th><%= t 'headings.op', 'Operation' %></th>
      </tr>
    </thead>

    <% @case_solutions.each do |case_solution| %>
      <tr>
      <td><%= link_to case_solution.title, course_case_issue_case_solution_path(@context, params[:case_issue_id], case_solution) %></td>
      <td><%= CaseSolution.display_state[case_solution.workflow_state] %></td>
      <td><%= case_solution.group_discuss ? t('#case_solutions.ya', 'Yes') : t('#case_solutions.not', 'No') %></td>
      <td><%= case_solution.user.name %></td>
      <td><%= case_solution.updated_at.to_formatted_s(:db) %></td>
      <td>
        <% if case_solution.executing? && can_do(@context, @current_user, :operate_case_as_student) && case_solution.user.id == @current_user.id %>
          <%= link_to (t 'links.submit', 'Submit'), course_case_issue_case_solution_submit_path(@context, params[:case_issue_id], case_solution), {:class => 'solution-submit'} %> |
        <%= link_to t('#buttons.edit', 'Edit'), edit_course_case_issue_case_solution_path(@context, params[:case_issue_id], case_solution) %> |
        <%= link_to t('#buttons.delete', 'Delete'), course_case_issue_case_solution_path(@context, params[:case_issue_id], case_solution), :confirm => t('#buttons.confirm', 'Are you sure?'), :method => :delete %>
      <% end %>
        <% if case_solution.being_reviewed? && can_do(@context, @current_user, :operate_case_as_teacher) %>
          <%= link_to (t 'links.review', 'Review'), course_case_issue_case_solution_review_path(@context, params[:case_issue_id], case_solution), {:class => 'solution-review'} %>
      <% end %>
      </td>
    </tr>
  <% end %>
  </table>
  <%= pagination %>
<% else %>
  <%= t 'empty_solutions', 'Empty case solutions' %>
<% end %>

<div id="case-review-dialog" style="display:none">
  <%= t 'your_option', 'Your option is' %>
  <input type="radio" name="review_result" value="review" checked="true"><%= t 'review', 'Review' %>
  <input type="radio" name="review_result" value="recommend"><%= t 'recommend', 'Recommend' %>
</div>
