
<%= link_to t('', 'New Case Template'), new_account_case_tpl_path %><br />

<% unless @case_tpls.empty? %>
  <table class="table table-striped table-bordered">
    <tr>
      <th><%= t '', 'Name' %></th>
      <th><%= t '', 'Author' %></th>
      <th colspan="3"><%= t '', 'Operation' %></th>
    </tr>

  <% @case_tpls.each do |case_tpl| %>
    <tr>
      <td><%= case_tpl.name %></td>
      <td><%= case_tpl.user.name %></td>
      <td><%= link_to (t '', 'Show'), account_case_tpl_path(@account, case_tpl) %></td>
      <td><%= link_to (t '', 'Edit'), edit_account_case_tpl_path(@account, case_tpl) %></td>
      <td><%= link_to (t '', 'Destroy'), account_case_tpl_path(@account, case_tpl), :confirm => (t '', 'Are you sure?'), :method => :delete %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <%= t '', 'Empty Case Templates' %>
<% end %>

