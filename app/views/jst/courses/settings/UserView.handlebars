<div class="admin-links">
  <button class="al-trigger ui-button"><span class="al-trigger-inner">{{#t "manage"}}Manage{{/t}}</span></button>
  <ul class="al-options">
    <li><a href="#" data-event="resendInvitation"><span class="ui-icon ui-icon-mail-closed" />重发邀请</a></li>
    {{#if isObserver}}
    <li><a href="#" data-event="linkToStudents"><span class="ui-icon ui-icon-link" />链接到学生</a></li>
    {{else}}
      {{#unless isDesigner}}
      <li><a href="#" data-event="editSections"><span class="ui-icon ui-icon-pencil" />编辑学群(班级)</a></li>
      {{/unless}}
    {{/if}}
    <li><a href="{{url}}"><span class="ui-icon ui-icon-person" />用户详细资料</a></li>
    {{#if canRemove}}
    <li class="ui-menu-item"><hr /></li>
    <li><a href="#" data-event="removeFromCourse"><span class="ui-icon ui-icon-trash" />从课程中删除</a></li>
    {{/if}}
  </ul>
</div>

{{#if isPending}}
<span class="pending"></span>
{{/if}}

<a href="{{url}}" class="name">{{sortable_name}}</a>
<div class="short_name">{{short_name}}</div>
<div class="email">{{email}}</div>

<div class="sections">
  {{#enrollments}}
  <div class="section enrollment_type {{#if pending}}pending{{/if}}">{{{sectionTitle}}}</div>
  {{/enrollments}}
</div>

<span class="clear"></span>
